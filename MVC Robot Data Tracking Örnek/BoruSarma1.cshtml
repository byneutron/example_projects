@{

    Layout = "~/Views/Shared/_mainView.cshtml";
}
<!DOCTYPE html>
<meta http-equiv="cache-control" content="no-cache" />
<meta http-equiv="Pragma" content="no-cache" />
<meta http-equiv="Expires" content="-1" />
<link href="~/Content/dist/css/module.css" rel="stylesheet" />
<html>

<body>
    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-3">
                    <div class="card">
                        <div class="info-box mb-auto">
                            <span class="info-box-icon bg-info elevation-1"><i class="fas fa-industry"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">Anlık Üretim</span>
                                <span class="info-box-number" id="pnumber">

                                </span>
                            </div>
                            <!-- /.info-box -->
                        </div>
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col-md-6 -->
                <div class="col-lg-3">
                    <div class="card">
                        <div class="info-box mb-auto">
                            <span class="info-box-icon bg-danger elevation-1"><i class="fas fa-bullseye"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text ">Hedef Üretim</span>
                                <span class="info-box-number">41,410</span>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.col-md-6 -->
                <div class="col-lg-3">
                    <div class="card">
                        <div class="info-box mb-auto">
                            <span id="pruncolor" class="info-box-icon elevation-1"><i class="fas fa-robot"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">Makine Durumu</span>
                                <span class="info-box-number" id="prun"></span>
                            </div>
                            <!-- /.info-box -->
                        </div>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="card">
                        <div class="info-box mb-auto">
                            <span id="pruncolor1" class="info-box-icon elevation-1"><i class="fas fa-border-all"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">Hücre Durumu</span>
                                <span class="info-box-number" id="prun1"></span>
                            </div>
                            <!-- /.info-box -->
                        </div>
                    </div>
                </div>
                <!-- /.col-md-6 -->
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-header border-0">
                            <div class="d-flex justify-content-between">
                                <h3 class="card-title">Haftalık Üretim Grafiği</h3>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="d-flex">
                                <p class="d-flex flex-column">
                                    <span>Toplam Üretim Adeti : <span class="text-bold text-lg" id="weekProduction" style="color: #22bb33"></span></span>


                                </p>
                                <p class="ml-auto d-flex flex-column text-right">
                                    <span class="text-success">

                                        <i id="arrowchange"></i> <b id="persentcolor">%</b> <b id="pPercent"></b>
                                    </span>
                                    <span class="text-muted">Geçen Haftaya Göre</span>
                                </p>
                            </div>
                            <!-- /.d-flex -->

                            <div class="position-relative mb-3">
                                <figure class="highcharts-figure">
                                    <div id="visitors-chart" class="container"></div>
                                </figure>
                            </div>

                            <div class="d-flex flex-row justify-content-end">
                                <span class="mr-2">
                                    <i class="fas fa-square text-green"></i> Bu Hafta
                                </span>

                                <span>
                                    <i class="fas fa-square text-orange"></i> Geçen Hafta
                                </span>
                            </div>
                        </div>
                    </div>
                    <!-- /.card -->

                    <div class="card">
                        <div class="card-header border-0">
                            <h3 class="card-title">Alarmlar</h3>

                        </div>
                        <div class="card-body table-responsive p-0">
                            <table class="table table-striped table-valign-middle">
                                <thead>
                                    <tr>
                                        <th>Açıklama</th>
                                        <th>Tarih</th>
                                        <th>Durum</th>
                                        <th>Detay</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Delme pistonu ileri gidemedi.</td>
                                        <td>
                                            <div class="sparkbar" data-color="#00a65a" data-height="20">@DateTime.Now</div>
                                        </td>
                                        <td><span class="badge badge-danger">Arıza Çözülemedi</span></td>
                                        <td>
                                            <a href="#" class="text-muted">
                                                <i class="fas fa-search"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>E1 servosu fren sistemi hatada.</td>
                                        <td>
                                            <div class="sparkbar" data-color="#00a65a" data-height="20">@DateTime.Now</div>
                                        </td>
                                        <td><span class="badge badge-warning">Bakımcı Bekleniyor</span></td>
                                        <td>
                                            <a href="#" class="text-muted">
                                                <i class="fas fa-search"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Robot parçayı vakumlayamadı.</td>
                                        <td>
                                            <div class="sparkbar" data-color="#00a65a" data-height="20">@DateTime.Now</div>
                                        </td>
                                        <td><span class="badge badge-info">Malzeme Bekleniyor</span></td>
                                        <td>
                                            <a href="#" class="text-muted">
                                                <i class="fas fa-search"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Acil durdurma butonuna basıldı!</td>
                                        <td>
                                            <div class="sparkbar" data-color="#00a65a" data-height="20">@DateTime.Now</div>
                                        </td>
                                        <td><span class="badge badge-success">Arıza Çözüldü</span></td>
                                        <td>
                                            <a href="#" class="text-muted">
                                                <i class="fas fa-search"></i>
                                            </a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col-md-6 -->
                <div class="col-lg-6">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Toplam Çalışma Süresi</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>

                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="chart-responsive">
                                        <figure class="highcharts-figure">
                                            <div id="pieChart" class="container"></div>
                                        </figure>
                                    </div>
                                    <!-- ./chart-responsive -->
                                </div>
                            </div>
                            <!-- /.row -->
                        </div>

                    </div>
                    <!-- /.card -->

                    <div class="card">
                        <div class="card-header border-0">
                            <h3 class="card-title">Arıza Bilgi</h3>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center border-bottom mb-3">
                                <p class="text-success text-xl">
                                    <i class="ion ion-ios-refresh-empty"></i>
                                </p>
                                <p class="d-flex flex-column text-right">
                                    <span class="font-weight-bold">
                                        <i class="ion ion-android-arrow-up text-success"></i> 384
                                    </span>
                                    <span class="text-muted">Toplam Çözülen Arıza</span>
                                </p>
                            </div>
                            <!-- /.d-flex -->
                            <div class="d-flex justify-content-between align-items-center border-bottom mb-3">
                                <p class="text-warning text-xl">
                                    <i class="ion ion-ios-cart-outline"></i>
                                </p>
                                <p class="d-flex flex-column text-right">
                                    <span class="font-weight-bold">
                                        <i class="ion ion-android-arrow-up text-warning"></i> 12
                                    </span>
                                    <span class="text-muted">Toplam Çözülemeyen Arıza</span>
                                </p>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- /.col-md-6 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </div>
    <script src="~/Content/plugins/chart.js/Chart.min.js"></script>
    <script src="~/Content/plugins/jquery/jquery.min.js"></script>
    <script src="~/Content/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <script src="~/Content/dist/js/adminlte.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.4.1.js"></script>
    <script src="~/signalr/hubs" type="text/javascript"></script>
    <script src="~/Scripts/robotChart.js"></script>
    <script src="~/Scripts/highcharts.js"></script>
    <script src="~/Scripts/exporting.js"></script>
    <script src="~/Scripts/offline-exporting.js"></script>
    <script src="~/Scripts/variable-pie.js"></script>
    @*<script src="~/Scripts/export-data.js"></script>*@
    <script src="~/Scripts/accessibility.js"></script>



</body>
</html>